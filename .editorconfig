root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.php]
indent_style = space
indent_size = 4

[*.yml]
indent_style = space
indent_size = 4

[*.xml]
indent_style = space
indent_size = 4

[*.scss]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
